{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.20.1.json",
  "config": {
    "view": {
      "continuousHeight": 300,
      "continuousWidth": 300
    }
  },
  "data": {
    "name": "table"
  },
  "encoding": {
    "color": {
      "field": "Richtung_Label",
      "scale": {
        "domain": ["von Links nach Rechts", "von Rechts nach Links"],
        "range": ["#d8b365", "#5ab4ac"]
      },
      "title": "Richtung",
      "type": "nominal"
    },
    "tooltip": [
      {
        "field": "Datum",
        "type": "ordinal"
      },
      {
        "field": "Stunde",
        "type": "ordinal"
      },
      {
        "field": "Richtung_Label",
        "type": "nominal"
      },
      {
        "field": "Anzahl",
        "type": "quantitative"
      }
    ],
    "x": {
      "field": "Stunde",
      "title": "Stunden",
      "type": "ordinal"
    },
    "xOffset": {
      "field": "Richtung",
      "type": "nominal"
    },
    "y": {
      "field": "Anzahl",
      "scale": {
        "domain": [0, 7000]
      },
      "title": "Anzahl Personen",
      "type": "quantitative"
    }
  },
  "height": 600,
  "mark": {
    "type": "bar"
  },
  "params": [
    {
      "bind": {
        "input": "range",
        "max": 15,
        "min": 0,
        "name": "Datum: ",
        "step": 1
      },
      "name": "date_idx",
      "value": 0
    }
  ],
  "transform": [
    {
      "filter": "(datum.date_idx === date_idx)"
    }
  ],
  "width": "container"
}
